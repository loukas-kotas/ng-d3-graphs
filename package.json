{
  "name": "ng-d3-graphs",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run build:lib --watch && ng serve",
    "build": "ng build",
    "test": "ng test",
    "test-headless": "ng test --watch=false --browsers=ChromeHeadless",
    "test:coverage": "ng test --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "ng-packagr": "ng-packagr",
    "release": "npm run release --prefix ./src/app/components/",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "format:fix": "pretty-quick --staged",
    "precommit": "run-s format:fix lint",
    "format:all": "pretty-quick ./src/app/components/",
    "build:lib": "ng-packagr -p src/app/components/package.json",
    "build:docs": "docsify init ./docs",
    "start:docs": "docsify serve ./docs",
    "publish:local": "npm run build:lib && npm publish src/app/components/dist --registry http://localhost:4873",
    "publish:remote": "npm run build:lib && npm publish src/app/components/dist --access=public"
  },
  "author": {
    "name": "Loukas Kotas",
    "url": "https://loukaskotas.com"
  },
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.14",
    "@angular/common": "~8.2.14",
    "@angular/compiler": "~8.2.14",
    "@angular/core": "~8.2.14",
    "@angular/forms": "~8.2.14",
    "@angular/platform-browser": "~8.2.14",
    "@angular/platform-browser-dynamic": "~8.2.14",
    "@angular/router": "~8.2.14",
    "ng-d3-graphs": "file:src/app/components/dist",
    "rxjs": "~6.4.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.20",
    "@angular-devkit/build-ng-packagr": "~0.803.26",
    "@angular/cli": "~8.3.20",
    "@angular/compiler-cli": "~8.2.14",
    "@angular/language-service": "~8.2.14",
    "@types/d3": "^5.7.2",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "cz-conventional-changelog": "^3.1.0",
    "d3": "^5.15.0",
    "docsify": "^4.11.3",
    "husky": "^4.2.5",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "lint-staged": "^10.1.3",
    "ng-packagr": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "protractor": "~5.4.0",
    "standard-version": "^7.1.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~3.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ngPackage": {
    "lib": {
      "entryFile": "public-api.ts"
    },
    "dest": "dist"
  }
}
